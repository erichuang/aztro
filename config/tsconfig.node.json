{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "noEmit": false,
    "outDir": "../dist",
    "rootDir": "..",
    "sourceMap": false
  },
  "include": ["../server/**/*", "../src/types/api.ts", "../src/lib/auth.ts"],
  "exclude": ["../server/**/*.test.ts", "../server/**/*.spec.ts"]
}
